{
  "name": "oc-component",
  "description": "",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx src",
    "dev": "oc-server dev",
    "build": "oc package .",
    "test": "vitest",
    "start": "oc dev .. --components oc-component",
    "start:registry": "node oc-registry/index.js",
    "build:topnav:oc": "cd components/topnav && oc package .",
    "publish:topnav": "oc publish ./components/topnav --registry http://localhost:3030",
    "build:topnav": "npm run build:topnav:oc && npm run start:registry && npm run publish:topnav"
  },
  "oc": {
    "files": {
      "data": "src/server.ts",
      "template": {
        "src": "src/App.tsx",
        "type": "oc-template-react"
      },
      "static": [
        "public"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.28",
    "autoprefixer": "^10.4.21",
    "jsdom": "^21.1.1",
    "oc-server": "^4.0.0",
    "oc-template-react-compiler": "^10.1.4",
    "postcss": "^8.5.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "^4.1.16",
    "typescript": "5.1.3",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16"
  }
}